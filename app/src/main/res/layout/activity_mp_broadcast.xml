<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Broadcast Your Message"
        android:textSize="25dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="Message"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="16dp"/>

    <EditText
        android:id="@+id/messagetext"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:hint="Add Detail of Message..."
        android:background="@drawable/round_border"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:gravity="center"
        android:textSize="15dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

    </LinearLayout>

    <Button
        android:id="@+id/broadcasttoconstituency"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Broadcast to Constituency"
        android:textStyle="normal"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/round_gender_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"/>


    <Button
        android:id="@+id/broadcasttoda"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Broadcast to DAs"
        android:textStyle="normal"
        android:textSize="15dp"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:background="@drawable/round_gender_button"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>


</LinearLayout>